{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}    
    <div class="jumbotron text-center">
        <h1>Category manager</h1>
    </div>
    <div class="container mt-4">
        <table class="table table-striped" style="table-layout:fixed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('admin.category.edit', {'id': category.id}) }}">Edit</a>
                        <form method="post" action="{{ path('admin.category.delete', {'id': category.id}) }}" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <button type="button" class="btn btn-primary modal-trigger" data-toggle="modal" data-target="{{ path('admin.category.new') }}">Create a new Category</button>
        </div>
    </div>
    {{ include('modal/newcategory.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/trigger-modal.js') }}"></script>
{% endblock %}
