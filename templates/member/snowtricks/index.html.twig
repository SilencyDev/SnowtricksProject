{% extends "base.html.twig" %}
{% block title 'AdminTricks'%}
{% block body %}
    <div class="jumbotron text-center">
        <h1>My tricks</h1>
    </div>
    <div class="container mt-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-striped" style="table-layout:fixed">
            <thead>
            <tr>
                <th>Title</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for snowtrick in snowtricks %}
            <tr>
                <td>{{ snowtrick.title }}</td>
                <td>
                    <a href="{{ path('member.snowtrick.edit', {id: snowtrick.id}) }}" class="btn btn-secondary">Edit</a>
                    <form method="post" action="{{ path('member.snowtrick.delete', {id: snowtrick.id}) }}" class="d-inline-block" onsubmit="return confirm('Confirm delete action ?')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete'~ snowtrick.id) }}">
                    <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
        <a href="{{ path('member.snowtrick.new') }}" class="btn btn-primary">Post a new trick</a>
        </div>
    </div>
{% endblock %}