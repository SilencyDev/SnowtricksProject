{% extends "base.html.twig" %}
{% block title 'My tricks'%}
{% block body %}
    <div class="jumbotron text-center">
        <h1>My tricks</h1>
    </div>
    <div class="container mt-4">
        <table class="table table-striped" style="table-layout:fixed">
            <thead>
            <tr>
                <th>Title</th>
                <th>Action</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            {% for snowtrick in snowtricks %}
            <tr>
                <td id="stitle">{{ snowtrick.title }}</td>
                <td>
                    <button type="button" id="test" class="btn btn-secondary modal-trigger-editS m-1" data-toggle="modal" data-target="{{ path('snowtrick.edit', {id: snowtrick.id}) }}">Edit</button>
                    <form class="d-inline-block snowtrick m-1" action="{{ path('snowtrick.delete', {id: snowtrick.id}) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete'~ snowtrick.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
                <td>
                    {% if snowtrick.validated %}
                        Validated
                    {% else %}
                        Pending
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <button type="button" id="test" class="btn btn-primary modal-trigger-newS" data-toggle="modal" data-target="{{ path('snowtrick.new') }}">Post a new trick</button>
        </div>
    </div>

    {{ include('modal/newsnowtrick.html.twig') }}
    {{ include('modal/editsnowtrick.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/trigger-modal.js') }}"></script>
    <script src="{{ asset('js/delete-snowtrick.js') }}"></script>
{% endblock %}