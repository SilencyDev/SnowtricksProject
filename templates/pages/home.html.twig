{% extends "base.html.twig" %}
{% block title 'Home'%}
{% block body %}
<div class="w-100 h-100" style="background-image: url({{ asset('banner/main-banner.jpg') }});">
    <div class="container">
        <div class="text-center">
            Welcome to Snowtricks !
        </div>
        <div class="row">
            <div class="col-lg-12" style="margin-bottom: 10px;">
                <a class="btn text-uppercase float-right" href="#portfolio">
                    <img src="{{ asset('icons/arrow-down.svg') }}" height="25px">
                </a>
            </div>
        </div>
    </div>
</div>

<section id="portfolio">
    <div class="container mt-4">
        <h2>Last Tricks</h2>
        <div class="row flex">
            {% for snowtrick in snowtricks %}
                <div class="col-xs-12 col-md-6 col-lg-4">
                    {% if snowtrick.mainpicture != NULL %}
                        <a href="{{ path('snowtrick.show', {id: snowtrick.id}) }}">
                            <img src="{{ asset(snowtrick.mainpicture.path) }}" class="card-img-top" style="max-width: 100%;">
                        </a>
                    {% endif %}
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ snowtrick.title }}
                            </h5>
                            <p class="text-primary"> {{ snowtrick.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="btn btn-primary" href="?page={{page + 1}}">Load more</a>
    </div>
    <div class="col-lg-12 mb-20">
        <a class="btn text-uppercase float-right" href="#portfolio">
            <img src="{{ asset('icons/arrow-up.svg') }}" height="25px">
        </a>
    </div>
</section>
{% endblock %}